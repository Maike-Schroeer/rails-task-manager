<div class='container mt-5'>
  <h2>Edit <%=@task.title%></h2>

  <%= form_with model: @tasks do |f| %>
  <div class='form-group'>
    <%= f.label :title%>
    <%= f.text_field :title, class:'form-control mt-3'%>
  </div>
  <div class='form-group'>
    <%= f.label :details %>
    <%= f.text_field :details, class:'form-control mt-3'%>
  </div>
  <div>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
    <%= f.submit class: 'btn btn-primary mt-3'%>
    <% end %>
  <div>
    <%=link_to "Back to list", tasks_path%>
  </div>
</div>
